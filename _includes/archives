<div class="row">
	<div class="myrow" style="margin-top: 20px;">
		<ul class="nav nav-list">
			<li class="nav-header">文章存档</li>
			{% for post in site.posts %}
				{% capture  ym %}{{ post.date | date:"%Y-%m" }}{% endcapture %}
				{% if year_month != ym %}
					{%	assign year_month = ym %}
				<li><a href="/archives.html#{{ym}}">{{ ym }}
					{%	assign count = 0 %}
					{% for pt in site.posts %}
						{% capture  cym %}{{ pt.date | date:"%Y-%m" }}{% endcapture %}
						{% if year_month == cym %}
							{% capture  count %}{{ count | plus:1 }}{% endcapture %}
						{% endif %}
					{% endfor %}
					({{ count }})</a>
				</li>
				{% endif %}
			{% endfor %}
		</ul>
	</div>
</div>